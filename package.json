{
    "name": "mdxmml",
    "displayName": "mdx mml",
    "description": "Visual Studio Code Syntax Highlight for X68K MDX MML",
    "version": "0.0.3dev",
    "publisher": "GOROman",
    "engines": {
        "vscode": "^1.66.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "keywords": [
        "X68000",
        "MXDRV",
        "MDX"
    ],
    "contributes": {
  
        "commands": [
            {
                "command": "mdxmml.run",
                "title": "Play MDX!",
                "icon": "$(play)"
            },
            {
                "command": "mdxmml.stop",
                "title": "Stop MDX",
                "icon": "$(debug-stop)"
            }
        ],
        "languages": [
            {
                "id": "mdx",
                "aliases": [
                    "X68MDX",
                    "mdx"
                ],
                "extensions": [
                    "mus",
                    "mml"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "mdx",
                "scopeName": "mdx",
                "path": "./syntaxes/mdx.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "mdx",
                "path": "./snippets/mdx.snippets.json"
            }
        ],
        "menus": {
            "editor/title/run": [
              {
                "command": "mdxmml.run",
                "group": "navigation"
              }
            ],
            "editor/title": [
              {
                "command": "mdxmml.stop",
                "group": "navigation"
              }
            ]
          }  
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/GOROman/vscode-mdxmml.git"
    },
    "activationEvents": [
        "onCommand:mdxmml.run",
        "onCommand:mdxmml.stop"
    ],

    "main": "./extension.js",

    "devDependencies": {
        "@types/jest": "^27.5.0",
        "@types/node": "^17.0.31"
    }
}
